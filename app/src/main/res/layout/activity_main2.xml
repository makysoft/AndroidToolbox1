<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layout_main"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/list_bg"
  android:fadingEdge="vertical"
  android:fadingEdgeLength="5dp">
  <LinearLayout 
  	android:layout_width="fill_parent"
  	android:layout_height="48dip"
  	android:background="@color/orange_default" 
  	android:gravity="center">
	<TextView
	    android:id="@+id/textView3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/white"
	    android:textStyle="bold"
	    android:text="Android Toolbox"
	    android:textAppearance="?android:attr/textAppearanceMedium" />
  </LinearLayout>   
  <ImageView style="@style/Divider"/>   
  <ScrollView android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">
      <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
          
	        <LinearLayout android:id="@+id/layout_process_manager" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/main_grid_icon_size" android:focusable="true" android:clickable="true" android:background="@drawable/list_item_bg_style">
	           <ImageView android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="10dp" android:src="@drawable/ic_process_default"/>
	           <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
		        	<TextView android:textSize="20.0sp" android:textColor="@color/list_primary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="Process Manager" android:gravity="center_vertical"/>
		        	<TextView android:id="@+id/tv_procesos_ejecucion" android:textSize="11.0sp" android:textColor="@color/list_secondary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/lbl_loading" android:gravity="center_vertical"/>
		        	<TextView android:id="@+id/tv_free_mem" android:textSize="11.0sp" android:textColor="@color/list_secondary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/lbl_loading" android:gravity="center_vertical"/>
		       </LinearLayout>
		    </LinearLayout>
		    
		    <ImageView style="@style/Divider"/> 
		    
	       <LinearLayout android:id="@+id/layout_app_manager" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/main_grid_icon_size" android:focusable="true" android:clickable="true" android:background="@drawable/list_item_bg_style">
	           <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_apps_default"  android:layout_marginLeft="10dp"/>
	           <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
		        <TextView android:textSize="20.0sp" android:textColor="@color/list_primary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent"  android:text="Application Manager" android:gravity="center_vertical"/>
		        <TextView android:id="@+id/tv_apps_memory" android:textSize="11.0sp" android:textColor="@color/list_secondary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/lbl_loading" android:gravity="center_vertical"/>
		        <TextView android:id="@+id/tv_apps_memory_sd" android:textSize="11.0sp" android:textColor="@color/list_secondary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/lbl_loading" android:gravity="center_vertical"/>
		       </LinearLayout>
		   </LinearLayout>
		   
		   <ImageView style="@style/Divider"/> 
		    
		   <LinearLayout android:id="@+id/layout_wifi_manager" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/main_grid_icon_size" android:focusable="true" android:clickable="true" android:background="@drawable/list_item_bg_style">
	           <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_wifi_default" android:layout_marginLeft="10dp"/>
   	           <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">	           
		        <TextView android:textSize="20.0sp" android:textColor="@color/list_primary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="Wifi Manager" android:gravity="center_vertical"/>
		        <TextView android:id="@+id/tv_main_wifi" android:textSize="11.0sp" android:textColor="@color/list_secondary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/lbl_loading" android:gravity="center_vertical"/>
		       </LinearLayout>
		    </LinearLayout>
		    
		    <ImageView style="@style/Divider"/> 
		    
	       <LinearLayout android:id="@+id/layout_network_manager" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/main_grid_icon_size" android:focusable="true" android:clickable="true" android:background="@drawable/list_item_bg_style">
	           <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_network_default" android:layout_marginLeft="10dp"/>
		        <TextView android:textSize="20.0sp" android:textColor="@color/list_primary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="Network Manager" android:gravity="center_vertical" android:layout_marginLeft="10dp"/>
		    </LinearLayout>
		    
		    <ImageView style="@style/Divider"/> 
		    
		    <LinearLayout android:id="@+id/layout_speed_settings" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/main_grid_icon_size" android:focusable="true" android:clickable="true" android:background="@drawable/list_item_bg_style">
	           <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_speed_settings_default" android:layout_marginLeft="10dp"/>
		        <TextView android:textSize="20.0sp" android:textColor="@color/list_primary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="Speed Settings" android:gravity="center_vertical" android:layout_marginLeft="10dp"/>
		    </LinearLayout>
		    
		    <ImageView style="@style/Divider"/> 
		    
	        <LinearLayout android:id="@+id/layout_cache_manager" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/main_grid_icon_size" android:focusable="true" android:clickable="true" android:background="@drawable/list_item_bg_style">
	           <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_trash_default" android:layout_marginLeft="10dp"/>
	           <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">	           
		        <TextView android:textSize="20.0sp" android:textColor="@color/list_primary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="Cache Cleaner" android:gravity="center_vertical"/>
		        <TextView android:id="@+id/tv_main_cache" android:textSize="11.0sp" android:textColor="@color/list_secondary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/lbl_loading" android:gravity="center_vertical"/>
		       </LinearLayout>
		    </LinearLayout>
		    
		    <ImageView style="@style/Divider"/> 
		    
	        <LinearLayout android:id="@+id/layout_move2sd" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/main_grid_icon_size" android:focusable="true" android:clickable="true" android:background="@drawable/list_item_bg_style">
	           <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_move2sd_default" android:layout_marginLeft="10dp"/>
	           <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">	           
		        <TextView android:textSize="20.0sp" android:textColor="@color/list_primary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="Move2SD" android:gravity="center_vertical"/>
		        <TextView android:id="@+id/tv_main_move2sd" android:textSize="11.0sp" android:textColor="@color/list_secondary_text_color" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/lbl_loading" android:gravity="center_vertical"/>
		       </LinearLayout>
		    </LinearLayout>
		    
		    <ImageView style="@style/Divider"/> 		    
		    
	  </LinearLayout>
  </ScrollView>
	<ImageView android:background="@drawable/list_divider_bar" android:layout_width="fill_parent" android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" />
	<LinearLayout android:id="@+id/ad_layout"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:background="@color/bar_color" android:gravity="center">        
      
	</LinearLayout>    
</LinearLayout>
