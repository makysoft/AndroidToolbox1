<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout style="@style/TitleBar_Orange">
    	<ImageButton style="@style/TitleBarAction"
    		android:onClick="onHomeClick" android:src="@drawable/ic_home_default" />     
        <ImageView style="@style/TitleBarSeparator" />   
    	<ImageView style="@style/TitleBarLogo" android:src="@drawable/application_manager_logo" />
    	<View style="@style/TitleBarSpring" />
    	<ImageView style="@style/TitleBarSeparator" />
    	<ImageButton style="@style/TitleBarAction"
    		android:onClick="onRefreshClick" android:src="@drawable/ic_popup_sync_6" />
    </LinearLayout>
    <TextView 
    	android:id="@+id/battery_info"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="%BATTERY_INFO%"/>
    
    <LinearLayout style="@style/TitleBar_Orange">
    	<ImageView style="@style/TitleBarLogo" android:src="@drawable/inc_foot_mobile_engineering" />
    	<View style="@style/TitleBarSpring" />   	
    </LinearLayout>    		
</LinearLayout>
